@article{gonzalez2013,
  title = {Location of {{Periventricular Nodular Heterotopia Is Related}} to the {{Malformation Phenotype}} on {{MRI}}},
  author = {Gonz{\'a}lez, G. and Vedolin, L. and Barry, B. and Poduri, A. and Walsh, C. and Barkovich, A.J.},
  year = {2013},
